<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="200dp">
    <Button
        android:id="@+id/ifaShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_with_ifa"
        android:background="@color/yellow"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/facebookShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Share with Facebook"
        android:background="@color/blue"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/twitterShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Share with Twitter"
        android:background="@color/blue"
        android:textColor="@color/white"/>


</LinearLayout>
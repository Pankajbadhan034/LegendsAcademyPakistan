<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblCoachingProgramName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coaching Programmes: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/coachingProgramName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coaching Program"
                android:textColor="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session"
                android:textColor="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblAgeGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age Group: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/ageGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age Group"
                android:textColor="@color/blue" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/lblDaysAttended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days Attended"
        android:textColor="@color/black"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/daysAttended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days Attended"
        android:textColor="@color/black"
        android:padding="10dp"/>

</LinearLayout>
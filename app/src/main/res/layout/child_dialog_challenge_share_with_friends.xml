<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="400dp">
    <ImageView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/crop__ic_cancel"/>
    <LinearLayout
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/topHeadLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHARE WITH FRIENDS"
           android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Challenge Title"
            android:gravity="center_horizontal"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/byCoachNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Coach Name"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey"
            android:layout_weight="2">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="10dp">
                <TextView
                    android:id="@+id/targetLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TARGET: "
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/target"
                    android:layout_toRightOf="@+id/targetLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/blue"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:padding="10dp">
                <TextView
                    android:id="@+id/targetTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TARGET TIME: "
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_toRightOf="@+id/targetTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 MIN"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:singleLine="true"/>
            </RelativeLayout>
        </LinearLayout>
        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:hint="Message"
            android:padding="10dp"
            android:gravity="top"
            android:layout_margin="10dp"
            android:inputType="textMultiLine|textCapWords"
            android:background="@drawable/smallfield"/>
</LinearLayout>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:text="SUBMIT"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lap..application.child.ChildRecordSlowFastvideoNewScreen">

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:padding="10dp"
        android:textSize="40sp"
        android:text="15"
        android:background="#80000000"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/backarrow"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/mergeVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/vidtick"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/frontBackCamera"
        android:layout_below="@+id/mergeVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/refresh"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>
    <com.devsmart.android.ui.HorizontalListView
        android:id="@+id/list"
        android:layout_below="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="5dp"/>

    <!--<TextView-->
        <!--android:id="@+id/autoRecordText"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="5"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:textSize="50sp"-->
        <!--android:textColor="@color/white"-->
        <!--android:background="#80000000"-->
        <!--android:paddingLeft="20dp"-->
        <!--android:paddingRight="20dp"-->
        <!--android:paddingBottom="10dp"-->
        <!--android:paddingTop="10dp"-->
        <!--android:visibility="invisible"/>-->
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal|center_vertical">
        <!--<ImageView-->
            <!--android:id="@+id/trim"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/trim"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/fast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast"
                android:drawableTop="@drawable/fastg"
                android:gravity="center_horizontal"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:drawableTop="@drawable/normalyellow"
                android:gravity="center_horizontal"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/slow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slow"
                android:drawableTop="@drawable/slowg"
                android:gravity="center_horizontal"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/alertMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You cannot record more than 15 seconds"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:background="#80000000"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/startRecording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/videoc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <!--<ImageView-->
            <!--android:id="@+id/autoRecord"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/playyellow"-->
            <!--android:gravity="right|bottom"/>-->
    </LinearLayout>



</RelativeLayout>
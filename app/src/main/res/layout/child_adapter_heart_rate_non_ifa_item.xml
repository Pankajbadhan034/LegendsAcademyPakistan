<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue">
    <TextView
        android:id="@+id/session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:padding="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_circle_one"
            android:layout_marginLeft="30dp"
            android:text="0"
            android:textSize="11sp"
            android:textColor="#e26f6d"
            android:gravity="center"/>
        <TextView
            android:id="@+id/meter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_circle_three"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="0"
            android:textSize="11sp"
            android:textColor="#ffa65e"
            android:gravity="center"/>
        <TextView
            android:id="@+id/max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_circle_two"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="0"
            android:textSize="11sp"
            android:textColor="#01d464"
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>
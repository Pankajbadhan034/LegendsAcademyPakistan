<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startModule.StartModuleTab4MonitorAndCovidQaScreen">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="PROGRAMS + MONITORING"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/header">
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/darkBlue">
            <com.lap..application.utils.CircularTextView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="a"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="17sp"/>

<!--            <ImageView-->
<!--                android:id="@+id/image"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:src="@drawable/placeholder"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/image"
                android:layout_toLeftOf="@+id/arrow"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/dailyWellness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily MONITORING"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GAME NAME"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textSize="10sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <com.lap..application.utils.CircularTextView
                android:id="@+id/image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="a"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="17sp"/>
<!--            <ImageView-->
<!--                android:id="@+id/image1"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:src="@drawable/placeholder"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/image1"
                android:layout_toLeftOf="@+id/arrow"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/covidWellness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Covid Wellness"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GAME NAME"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textSize="10sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:divider="@color/black"
        android:dividerHeight="1dp"/>

</RelativeLayout>
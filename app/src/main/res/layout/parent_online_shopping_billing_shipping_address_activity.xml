<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".parent.ParentOnlineShoppingBillingShippingAddressScreen">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="CART"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textSize="24sp" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/noNeedToShip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No need to ship"
                android:padding="5dp"/>
            <LinearLayout
                android:id="@+id/billLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="BILLING FORM"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:paddingTop="5dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/darkGrey"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="Name"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:textSize="18sp"
            android:theme="@style/DarkLineTheme" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/darkGrey"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textSize="18sp"
            android:theme="@style/DarkLineTheme" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/darkGrey"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="Phone"
            android:inputType="phone"
            android:singleLine="true"
            android:textSize="18sp"
            android:theme="@style/DarkLineTheme" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addressTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/darkGrey"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="Address"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:textSize="18sp"
            android:theme="@style/DarkLineTheme" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cityTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/darkGrey"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="City"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:textSize="18sp"
            android:theme="@style/DarkLineTheme" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/stateTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/darkGrey"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

        <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="State"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:textSize="18sp"
            android:theme="@style/DarkLineTheme" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/countryTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/darkGrey"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

        <EditText
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="Country"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:textSize="18sp"
            android:theme="@style/DarkLineTheme" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/zipTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/darkGrey"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

        <EditText
            android:id="@+id/zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="Zip"
            android:inputType="phone"
            android:singleLine="true"
            android:textSize="18sp"
            android:theme="@style/DarkLineTheme" />
    </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/billShipSame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Billing address and shipping address is same"
                android:padding="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shipLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Shipping FORM"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:textSize="24sp"
                    android:paddingTop="10dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nameTextInputLayoutShip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/darkGrey"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

                    <EditText
                        android:id="@+id/nameShip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:hint="Name"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:textSize="18sp"
                        android:theme="@style/DarkLineTheme" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailTextInputLayoutShip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/darkGrey"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

                    <EditText
                        android:id="@+id/emailShip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textSize="18sp"
                        android:theme="@style/DarkLineTheme" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phoneTextInputLayoutShip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/darkGrey"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

                    <EditText
                        android:id="@+id/phoneShip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:textSize="18sp"
                        android:theme="@style/DarkLineTheme" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addressTextInputLayoutShip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/darkGrey"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

                    <EditText
                        android:id="@+id/addressShip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:hint="Address"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:textSize="18sp"
                        android:theme="@style/DarkLineTheme" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cityTextInputLayoutShip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/darkGrey"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

                    <EditText
                        android:id="@+id/cityShip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:hint="City"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:textSize="18sp"
                        android:theme="@style/DarkLineTheme" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/stateTextInputLayoutShip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/darkGrey"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

                    <EditText
                        android:id="@+id/stateShip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:hint="State"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:textSize="18sp"
                        android:theme="@style/DarkLineTheme" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/countryTextInputLayoutShip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/darkGrey"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

                    <EditText
                        android:id="@+id/countryShip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:hint="Country"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:textSize="18sp"
                        android:theme="@style/DarkLineTheme" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/zipTextInputLayoutShip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/darkGrey"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout2">

                    <EditText
                        android:id="@+id/zipShip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:hint="Zip"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:textSize="18sp"
                        android:theme="@style/DarkLineTheme" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/makePayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAKE A PAYMENT"
                android:background="@color/darkBlue"
                android:textColor="@color/white"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lap..application.child.ChildVideoFilterScreen">
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/backarrow"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/play"
        android:layout_above="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/playc" />
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/doneclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:background="@color/orange"
            />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/normal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Normal"
                    android:textColor="@color/white"
                    android:background="@drawable/normal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:id="@+id/blur"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Blur"
                    android:textColor="@color/white"
                    android:background="@drawable/blur"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:id="@+id/chrome"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Chrome"
                    android:textColor="@color/white"
                    android:background="@drawable/chrome"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:id="@+id/blackAndWhite"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/blackWhite"
                    android:textColor="@color/white"
                    android:background="@drawable/blackwhite"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:id="@+id/sharpner"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Sharpner"
                    android:textColor="@color/white"
                    android:background="@drawable/sharpen"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical|center_horizontal"/>

                <TextView
                    android:id="@+id/negative"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="negative"
                    android:textColor="@color/white"
                    android:background="@drawable/negative"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical|center_horizontal"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    
</RelativeLayout>

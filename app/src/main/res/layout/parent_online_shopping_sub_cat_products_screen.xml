<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".parent.ParentOnlineShoppingSubCatProductsScreen">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="MERCHANDISE"
            android:textColor="@color/white"
            android:textSize="17sp" />
        <RelativeLayout
            android:id="@+id/relativeCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"

            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/circleImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cartnew"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/badgeText"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/badge_circle_white"
                android:gravity="center"
                android:text="0"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="8sp"/>

        </RelativeLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:layout_marginTop="5dp"
        android:numColumns="2" />

</LinearLayout>
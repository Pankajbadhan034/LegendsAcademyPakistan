<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".application.child.ChildMyGallerySingleImageScreen">

    <ImageView
        android:id="@+id/singleImageGallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <VideoView
        android:id="@+id/singleVideoGallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        android:background="#80000000"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_below="@+id/title"
        android:background="#80000000"/>

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/crop__ic_cancel"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/likeGallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:drawableLeft="@drawable/like"
            android:drawablePadding="5dp"
            android:text="16"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/commentGallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:drawableLeft="@drawable/comment2"
            android:drawablePadding="5dp"
            android:text="16"
            android:textColor="@color/yellow" />

        <TextView
            android:id="@+id/dateGallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center_horizontal"
            android:text="8 Aug, 2016"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>

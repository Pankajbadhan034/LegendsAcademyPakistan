<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startModule.StartModuleDashboardScreen">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="LATEST NEWS"
            android:layout_marginLeft="5dp"
            android:textSize="13.5sp"
            android:textColor="@color/white" />
        <ImageView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menutop"
            android:layout_alignParentRight="true"
            android:visibility="invisible"/>

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/linearView1"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp">
        <include
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        layout="@layout/start_module_tab_one"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearView2"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:visibility="gone">
        <include
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            layout="@layout/start_module_tab_two"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearView3"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:visibility="gone">
        <include
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            layout="@layout/start_module_tab_three"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearView4"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:visibility="gone">
        <include
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            layout="@layout/start_module_tab_four"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearView4Login"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:visibility="gone">
        <include
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            layout="@layout/common_activity_login_screen"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:background="@color/black"
    android:weightSum="4">
    <LinearLayout
        android:id="@+id/homeLinear"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/darkBlue">
        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_c_hover"/>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/ospreysLinear"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/ospreys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oesprays"/>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/strategyLinear"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/strategy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/strategy_c"/>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/rugbyLinear"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/rugby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rugby_c"/>
    </LinearLayout>

</LinearLayout>

</RelativeLayout>